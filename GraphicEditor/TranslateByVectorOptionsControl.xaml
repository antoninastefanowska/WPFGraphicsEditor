<UserControl x:Class="GraphicEditor.TranslateByVectorOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphicEditor"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <StackPanel>
        <Label Margin="5 5 5 0">Wektor X:</Label>
        <TextBox Name="tbVectorX" Margin="5 0 5 5" Padding="5" PreviewTextInput="NumberValidation" />
        <Label Margin="5 5 5 0">Wektor Y:</Label>
        <TextBox Name="tbVectorY" Margin="5 0 5 5" Padding="5" PreviewTextInput="NumberValidation" />
        <Button Margin="5" Padding="5" Click="Confirm_OnClick">Wykonaj</Button>
    </StackPanel>
</UserControl>
